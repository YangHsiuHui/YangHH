<script>
let year=1, seasons=["æ˜¥","å¤","ç§‹","å†¬"], si=0;
let gold=43000, people=100, army=80, fame=100;

const goldEl=document.getElementById("gold"),
      peopleEl=document.getElementById("people"),
      armyEl=document.getElementById("army"),
      fameEl=document.getElementById("fame");

function updateStats(){
  goldEl.innerText=`ğŸ’° ${gold}`;
  peopleEl.innerText=`ğŸ˜Š ${people}`;
  armyEl.innerText=`âš”ï¸ ${army}`;
  fameEl.innerText=`â­ ${fame}`;
}

function updateTime(){document.getElementById("time").innerText=`ç¬¬ ${year} å¹´ãƒ»${seasons[si]}`;}

const memos=[
{title:"æˆ¶éƒ¨å¥è«‹æ¸…æŸ¥é€ƒç¨…",text:"è¿‘å¹´å•†è³ˆéš±åŒ¿ç¨…éŠ€ï¼Œåœ‹èª²æµå¤±ï¼Œè«‹æ—¨å¾¹æŸ¥ã€‚",
 opts:[{t:"åš´æŸ¥å¾µç¨…",g:3000,p:-5},{t:"ç·©æŸ¥å®‰æ°‘",g:1000,p:+2},{t:"æš«ä¸è™•ç†",g:0,p:-2}]},
{title:"å…µéƒ¨å¥å ±é‚Šé˜²åƒç·Š",text:"åŒ—å¢ƒè »æ—ç•°å‹•é »ç¹ï¼Œè«‹å¢å…µå‚™æˆ°ã€‚",
 opts:[{t:"å³åˆ»å¢å…µ",a:+5,f:+2,g:-2000},{t:"æ´¾ä½¿å®‰æ’«",f:+3},{t:"ä¸äºˆç†æœƒ",p:-5}]}
];

function loadMemo(){
  const m=memos[Math.floor(Math.random()*memos.length)];
  document.getElementById("memoTitle").innerText=m.title;
  document.getElementById("memoText").innerText=m.text;
  const memoBtns=document.getElementById("memoBtns");
  memoBtns.innerHTML="";
  m.opts.forEach(o=>{
    const b=document.createElement("button");
    b.className="btn-green";
    b.innerText=o.t;
    b.onclick=()=>{
      gold+=o.g||0;
      people+=o.p||0;
      army+=o.a||0;
      fame+=o.f||0;
      updateStats();
      loadMemo();
    };
    memoBtns.appendChild(b);
  });
}

/* å…­éƒ¨ä»»å‹™ */
const deptTasks={
"åéƒ¨":["æ•´é “å†—å®˜"],
"æˆ¶éƒ¨":["æ¸…æŸ¥è³¦ç¨…","æ‹›å‹Ÿèƒ¡å•†"],
"ç¦®éƒ¨":["ä¿®å®—å»Ÿ"],
"å…µéƒ¨":["é‚Šé˜²æ¼”ç·´"],
"åˆ‘éƒ¨":["æ•´é “æ³•ç´€"],
"å·¥éƒ¨":["ä¿®ç¯‰æ°´åˆ©"]
};
let activeTasks=[], current={};

function openTask(dept,name){
  current={dept,name};
  document.getElementById("taskTitle").innerText=`${dept}å°šæ›¸ ${name}`;
  const taskBtns=document.getElementById("taskBtns");
  taskBtns.innerHTML="";
  deptTasks[dept].forEach(t=>{
    const b=document.createElement("button");
    b.className="btn-green";
    b.innerText=t;
    b.onclick=()=>assignTask(t);
    taskBtns.appendChild(b);
  });
  document.getElementById("taskPanel").classList.remove("hidden");
}
function closeTask(){document.getElementById("taskPanel").classList.add("hidden");}
function assignTask(t){
  activeTasks.push({dept:current.dept, officer:current.name, task:t, remain:2});
  updateTaskList();
  closeTask();
}
function updateTaskList(){
  const tasksDiv=document.getElementById("tasks");
  if(activeTasks.length===0){tasksDiv.innerText="ç›®å‰ç„¡ä»»å‹™"; return;}
  tasksDiv.innerHTML=activeTasks.map(t=>`ã€${t.dept}ã€‘${t.officer}ï¼${t.task}ï¼ˆå‰© ${t.remain} å­£ï¼‰`).join("<br>");
}

function showPanel(id){
  ['court','six','taskList','taskPanel'].forEach(p=>document.getElementById(p).classList.add('hidden'));
  document.getElementById(id).classList.remove('hidden');
}

function nextSeason(){
  si++; if(si>=4){si=0; year++;}
  activeTasks.forEach(t=>t.remain--);
  activeTasks=activeTasks.filter(t=>t.remain>0);
  updateTaskList();
  updateTime();
}

/* åˆå§‹åŒ– */
updateTime(); updateStats(); loadMemo();
</script>

